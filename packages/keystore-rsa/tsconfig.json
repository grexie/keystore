{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["dom", "ES2022"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "composite": true
  },
  "include": ["src"],
  "exclude": ["lib"],
  "references": [
    {
      "path": "../keystore"
    }
  ]
}
